<Window x:Class="ProgSim.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProgSim"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280" ResizeMode="CanResize">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/Images/mainmenubackground.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <Button Name="btn_newGame" Content="Новая игра" HorizontalAlignment="Left" Margin="581,505,0,0" VerticalAlignment="Top" Width="188" Height="28"/>
        <Button IsEnabled="false" Name="btn_continue" Content="Продолжить" HorizontalAlignment="Left" Margin="581,538,0,0" VerticalAlignment="Top" Width="188" Height="28"/>
        <Button Visibility="Hidden" Content="Невидимая кнопка. >=)" HorizontalAlignment="Left" Margin="581,571,0,0" VerticalAlignment="Top" Width="188" Height="28"/>
        <Button Name="btn_exit" Content="Выход" HorizontalAlignment="Left" Margin="581,604,0,0" VerticalAlignment="Top" Width="188" Height="28" Click="btn_exit_Click"/>

    </Grid>
</Window>
